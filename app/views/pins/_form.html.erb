
<%= simple_form_for(@pin, html:  { class: 'form-horizontal'}) do |f| %>
	
	<div class="form-group " >
		<div class="col-sm-6" >
			<%= f.label :Image %>
			<%= f.file_field :image %>
		</div>
	</div>
	
	<div class="form-group">
		<div class="col-sm-4">
			<%= f.input :title %>
		</div>
	</div>

	<div class="form-group " >
		<div class="col-sm-6" >
			<%= f.input :description %>
		</div>
	</div>
		
	<div class="form-group">
		<%= f.button :submit %>
	</div>

	<div class="form-group">
		<%= link_to 'Back', root_path %>
	</div>
<% end %>
